<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_his_bed" model="ir.ui.view">
            <field name="name">view.form.his.bed</field>
            <field name="model">his.bed</field>
            <field name="arch" type="xml">
                <form string="bed">
                    <sheet>
                        <group>
                            <group string="General">
                                <field name="name"/>
                            </group>
                            <group string="Other">
                                <field name="his_room_id" options="{'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <record id="view_list_his_bed" model="ir.ui.view">
            <field name="name">view.tree.his.bed</field>
            <field name="model">his.bed</field>
            <field name="arch" type="xml">
                <list string="bed"  open_form_view="True">
                    <field name="name" optional="show" />
                    <field name="his_room_id" optional="show"/>
                </list>
            </field>
        </record>

        <record id="action_his_bed" model="ir.actions.act_window">
            <field name="name">bed</field>
            <field name="res_model">his.bed</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_list_his_bed"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new bed!
                </p></field>
        </record>

    </data>
</odoo>