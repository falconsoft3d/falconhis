<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_his_hospital" model="ir.ui.view">
            <field name="name">view.form.his.hospital</field>
            <field name="model">his.hospital</field>
            <field name="arch" type="xml">
                <form string="Medical Specialty">
                    <sheet>
                        <group>
                            <group string="General">
                                <field name="name"/>
                            </group>
                            <group string="Other">
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <record id="view_list_his_hospital" model="ir.ui.view">
            <field name="name">view.tree.his.hospital</field>
            <field name="model">his.hospital</field>
            <field name="arch" type="xml">
                <list string="Medical Specialty"  open_form_view="True">
                    <field name="name" optional="show" />
                    <field name="company_id" optional="show"/>
                </list>
            </field>
        </record>

        <record id="action_his_hospital" model="ir.actions.act_window">
            <field name="name">Hospital</field>
            <field name="res_model">his.hospital</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_list_his_hospital"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new Hospital!
                </p></field>
        </record>

    </data>
</odoo>