<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_medical_specialty" model="ir.ui.view">
            <field name="name">view.form.medical.specialty</field>
            <field name="model">medical.specialty</field>
            <field name="arch" type="xml">
                <form string="Medical Specialty">
                    <sheet>
                        <group>
                            <group string="General">
                                <field name="name"/>
                            </group>
                            <group string="Other">
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <record id="view_list_medical_specialty" model="ir.ui.view">
            <field name="name">view.tree.medical.specialty</field>
            <field name="model">medical.specialty</field>
            <field name="arch" type="xml">
                <list string="Medical Specialty"  open_form_view="True">
                    <field name="name" optional="show" />
                </list>
            </field>
        </record>

        <record id="action_medical_specialty" model="ir.actions.act_window">
            <field name="name">Medical Specialty</field>
            <field name="res_model">medical.specialty</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_list_medical_specialty"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new Medical Specialty!
                </p></field>
        </record>

    </data>
</odoo>