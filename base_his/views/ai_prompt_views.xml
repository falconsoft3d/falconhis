<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_ai_prompt" model="ir.ui.view">
            <field name="name">view.form.ai.prompt</field>
            <field name="model">ai.prompt</field>
            <field name="arch" type="xml">
                <form string="AI Prompt">
                    <header>
                        <button name="action_set_as_default" string="Set as Default"
                           type="object" invisible="is_default"
                           class="oe_highlight"
                           icon="fa-star"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <field name="active" widget="boolean_button" 
                                   options="{'terminology': 'active'}"/>
                            <field name="is_default" widget="boolean_button"
                                   options="{'terminology': {'true': 'Default', 'false': 'Not Default'}}"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g., Standard Medical Diagnosis"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sequence"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="max_tokens"/>
                                <field name="temperature"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prompt Template" name="prompt">
                                <group>
                                    <field name="prompt_template" widget="text" 
                                           placeholder="Enter your prompt template here. Use variables: {patient_info}, {specialty}, {disease}, {description}"/>
                                </group>
                            </page>
                            <page string="System Message" name="system">
                                <group>
                                    <field name="system_message" widget="text"
                                           placeholder="Define the AI role and behavior here"/>
                                </group>
                            </page>
                            <page string="Description" name="description">
                                <group>
                                    <field name="description" widget="text"
                                           placeholder="Describe what this prompt is used for"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_list_ai_prompt" model="ir.ui.view">
            <field name="name">view.tree.ai.prompt</field>
            <field name="model">ai.prompt</field>
            <field name="arch" type="xml">
                <list string="AI Prompts" default_order="sequence, id">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="is_default" widget="boolean_toggle"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="max_tokens"/>
                    <field name="temperature"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <record id="action_ai_prompt" model="ir.actions.act_window">
            <field name="name">AI Prompts</field>
            <field name="res_model">ai.prompt</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new AI Prompt Template!
                </p>
                <p>
                    Define custom prompts for AI-generated medical recommendations.
                    You can create different prompts for different specialties or use cases.
                </p>
            </field>
        </record>

    </data>
</odoo>
