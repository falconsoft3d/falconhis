<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_medical_action" model="ir.ui.view">
            <field name="name">view.form.medical.action</field>
            <field name="model">medical.action</field>
            <field name="arch" type="xml">
                <form string="Medical Action">
                    <header>

                        <button name="action_complete" string="To Completed"
                           type="object" invisible="state != 'draft'"
                           class="oe_highlight"/>

                        <button name="action_set_draft" string="To Draft"
                           type="object" invisible="state == 'draft'"
                           class="oe_highlight"/>


                        <field name="state" widget="statusbar"/>

                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="General">
                                <field name="res_partner_id" options="{'no_create': True}" readonly="state not in ['draft']"/>
                                <field name="medical_type" readonly="state not in ['draft']"/>
                                <field name="product_id"
                                       domain="[('medical_type', '=', medical_type)]"
                                       options="{'no_create': True}" readonly="state not in ['draft']"/>
                                <field name="value"  readonly="state not in ['draft']"/>
                            </group>
                            <group string="Other">
                                <field name="creation_date" readonly="state not in ['draft']" />
                                <field name="planning_date" readonly="state not in ['draft']" />
                                <field name="execution_date" readonly="1" />
                                <field name="user_id" readonly="state not in ['draft']"/>
                                <field name="exec_user_id" readonly="1"/>
                                <field name="company_id" readonly="state not in ['draft']"/>
                            </group>
                        </group>
                        <field name="description" readonly="state not in ['draft']"/>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <record id="view_list_medical_action" model="ir.ui.view">
            <field name="name">view.tree.medical.action</field>
            <field name="model">medical.action</field>
            <field name="arch" type="xml">
                <list string="Medical Record"
                      decoration-danger="state == 'draft'"
                      open_form_view="True">
                    <field name="name" optional="show" />
                    <field name="res_partner_id" optional="show"/>
                    <field name="medical_type" optional="show"/>
                    <field name="product_id" optional="show"/>
                    <field name="value" optional="show"/>
                    <field name="creation_date" optional="show"/>
                    <field name="planning_date" optional="show" />
                    <field name="execution_date" optional="show" />
                    <field name="user_id" optional="show"/>
                    <field name="exec_user_id" optional="show"/>
                    <field name="company_id" optional="show"/>
                    <field name="user_id" optional="show"/>
                    <field name="state" optional="show"/>
                </list>
            </field>
        </record>

        <!-- Vista de Calendario para Fecha de Creación -->
        <record id="view_calendar_medical_action_creation" model="ir.ui.view">
            <field name="name">medical.action.calendar.creation</field>
            <field name="model">medical.action</field>
            <field name="arch" type="xml">
                <calendar string="Medical Actions - Creation Date" 
                          date_start="creation_date" 
                          color="state"
                          quick_create="False"
                          mode="month">
                    <field name="res_partner_id"/>
                    <field name="medical_type"/>
                    <field name="user_id" filters="1" avatar_field="avatar_128"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Vista de Calendario para Fecha de Planeación -->
        <record id="view_calendar_medical_action_planning" model="ir.ui.view">
            <field name="name">medical.action.calendar.planning</field>
            <field name="model">medical.action</field>
            <field name="arch" type="xml">
                <calendar string="Medical Actions - Planning Date" 
                          date_start="planning_date" 
                          color="medical_type"
                          quick_create="False"
                          mode="month">
                    <field name="res_partner_id"/>
                    <field name="product_id"/>
                    <field name="user_id" filters="1" avatar_field="avatar_128"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Vista de Calendario para Fecha de Ejecución -->
        <record id="view_calendar_medical_action_execution" model="ir.ui.view">
            <field name="name">medical.action.calendar.execution</field>
            <field name="model">medical.action</field>
            <field name="arch" type="xml">
                <calendar string="Medical Actions - Execution Date" 
                          date_start="execution_date" 
                          color="state"
                          quick_create="False"
                          mode="month">
                    <field name="res_partner_id"/>
                    <field name="user_id" filters="1" avatar_field="avatar_128"/>
                    <field name="exec_user_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <record id="action_medical_action" model="ir.actions.act_window">
            <field name="name">Medical Action</field>
            <field name="res_model">medical.action</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="view_id" ref="view_list_medical_action"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new Medical Action!
                </p></field>
        </record>

        <!-- Acciones adicionales para cada vista de calendario -->
        <record id="action_medical_action_calendar_planning" model="ir.actions.act_window">
            <field name="name">Medical Actions - Planning</field>
            <field name="res_model">medical.action</field>
            <field name="view_mode">calendar,list,form</field>
            <field name="view_id" ref="view_calendar_medical_action_planning"/>
            <field name="domain">[('planning_date', '!=', False)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No planned medical actions found.
                </p>
            </field>
        </record>

        <record id="action_medical_action_calendar_execution" model="ir.actions.act_window">
            <field name="name">Medical Actions - Executed</field>
            <field name="res_model">medical.action</field>
            <field name="view_mode">calendar,list,form</field>
            <field name="view_id" ref="view_calendar_medical_action_execution"/>
            <field name="domain">[('execution_date', '!=', False)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No executed medical actions found.
                </p>
            </field>
        </record>

    </data>
</odoo>