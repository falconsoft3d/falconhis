<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_medical_record" model="ir.ui.view">
            <field name="name">view.form.medical.record</field>
            <field name="model">medical.record</field>
            <field name="arch" type="xml">
                <form string="Medical Record">
                    <header>
                        <button name="action_close" string="To Close"
                           type="object" invisible="state != 'draft'"
                           class="oe_highlight"/>

                        <button name="action_set_draft" string="To Draft"
                           type="object" invisible="state != 'closed'"
                           class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>

                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="General">
                                <field name="res_partner_id" options="{'no_create': True}" readonly="state in ['closed']"/>
                                <field name="medical_specialty_id" options="{'no_create': True}" readonly="state in ['closed']"/>
                                <field name="his_disease_id" options="{'no_create': True}" readonly="state in ['closed']"/>
                            </group>
                            <group string="Other">
                                <field name="creation_date" readonly="state in ['closed']"/>
                                <field name="user_id" readonly="state in ['closed']"/>
                                <field name="company_id" readonly="state in ['closed']"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Clinical Notes">
                                <field name="description" readonly="state in ['closed']"/>
                            </page>
                            <page string="IA">
                                <group>
                                    <group>
                                        <field name="ai_prompt_id" options="{'no_create': True}" 
                                               readonly="state in ['closed']"/>
                                    </group>
                                    <group>
                                        <button name="action_generate_ai_recommendation" string="Generate with Current Prompt"
                                           type="object" class="btn-secondary"
                                           icon="fa-refresh"
                                           invisible="not ai_prompt_id"
                                           help="Generate AI recommendation using the selected prompt"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="ai_recommendation" readonly="1" widget="text"/>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <record id="view_list_medical_record" model="ir.ui.view">
            <field name="name">view.tree.medical.record</field>
            <field name="model">medical.record</field>
            <field name="arch" type="xml">
                <list string="Medical Record"  open_form_view="True">
                    <field name="name" optional="show" />
                    <field name="res_partner_id"  optional="show" />
                    <field name="medical_specialty_id"  optional="show" />
                    <field name="his_disease_id"  optional="show" />
                    <field name="creation_date"  optional="show" />
                    <field name="user_id"  optional="show" />
                    <field name="company_id"  optional="show" />
                    <field name="user_id"  optional="show" />
                    <field name="state"  optional="show" />
                </list>
            </field>
        </record>



        <record id="action_medical_record" model="ir.actions.act_window">
            <field name="name">Medical Record</field>
            <field name="res_model">medical.record</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_list_medical_record"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new Medical Record!
                </p></field>
        </record>

    </data>
</odoo>