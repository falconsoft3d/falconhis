<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_medical_record" model="ir.ui.view">
            <field name="name">view.form.medical.record</field>
            <field name="model">medical.record</field>
            <field name="arch" type="xml">
                <form string="Medical Record">
                    <header>
                        <button name="action_close" string="To Close"
                           type="object" invisible="state != 'draft'"
                           class="oe_highlight"/>

                        <button name="action_set_draft" string="Reopen"
                           type="object" invisible="state != 'closed'"
                           class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>

                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="General">
                                <field name="res_partner_id" options="{'no_create': True}" readonly="state in ['closed']"/>
                                <field name="medical_specialty_id" options="{'no_create': True}" readonly="state in ['closed']"/>
                            </group>
                            <group string="Other">
                                <field name="creation_date" readonly="state in ['closed']"/>
                                <field name="user_id" readonly="state in ['closed']"/>
                                <field name="company_id" readonly="state in ['closed']"/>
                            </group>
                        </group>
                        <field name="description" readonly="state in ['closed']"/>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <record id="view_list_medical_record" model="ir.ui.view">
            <field name="name">view.tree.medical.record</field>
            <field name="model">medical.record</field>
            <field name="arch" type="xml">
                <list string="Medical Record"  open_form_view="True">
                    <field name="name" optional="show" />
                    <field name="res_partner_id"/>
                    <field name="medical_specialty_id"/>
                    <field name="creation_date"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="action_medical_record" model="ir.actions.act_window">
            <field name="name">Medical Record</field>
            <field name="res_model">medical.record</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_list_medical_record"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new Medical Record!
                </p></field>
        </record>

    </data>
</odoo>