<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_type_measurement" model="ir.ui.view">
            <field name="name">view.form.type.measurement</field>
            <field name="model">type.measurement</field>
            <field name="arch" type="xml">
                <form string="Measurement">
                    <sheet>
                        <group>
                            <group string="General">
                                <field name="name"/>
                            </group>
                            <group string="Other">
                                <field name="vital_sign"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <record id="view_list_type_measurement" model="ir.ui.view">
            <field name="name">view.tree.type.measurement</field>
            <field name="model">type.measurement</field>
            <field name="arch" type="xml">
                <list string="Disease"  open_form_view="True">
                    <field name="name" optional="show" />
                    <field name="vital_sign" optional="show"/>
                </list>
            </field>
        </record>

        <record id="action_type_measurement" model="ir.actions.act_window">
            <field name="name">Measurement</field>
            <field name="res_model">type.measurement</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_list_type_measurement"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new Measurement!
                </p></field>
        </record>

    </data>
</odoo>