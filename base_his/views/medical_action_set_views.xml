<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_list_medical_action_set" model="ir.ui.view">
            <field name="name">view.tree.medical.action.set</field>
            <field name="model">medical.action.set</field>
            <field name="arch" type="xml">
                <list string="Medical Action Set" open_form_view="True">
                    <field name="name" optional="show" />
                    <field name="company_id" optional="show"/>
                </list>
            </field>
        </record>

        <record id="view_form_medical_action_set" model="ir.ui.view">
            <field name="name">view.form.medical.action.set</field>
            <field name="model">medical.action.set</field>
            <field name="arch" type="xml">
                <form string="Medical Action Set">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g., Pre-Surgery Protocol"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Describe the purpose of this action set..."/>
                        </group>

                        <notebook>
                            <page name="lines" string="Lines">
                                <field name="line_ids" widget="one2many_list">
                                    <list editable="bottom">
                                        <field name="medical_type"/>
                                        <field name="product_id" options="{'no_create': True}"
                                               domain="[('medical_type', '=', medical_type)]"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <record id="action_medical_action_set" model="ir.actions.act_window">
            <field name="name">Action Sets</field>
            <field name="res_model">medical.action.set</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new Medical Action Set!
                </p>
                <p>
                    Action Sets are templates that group multiple medical actions together.
                    You can use them to quickly create a set of actions for a patient,
                    like a pre-surgery protocol or a treatment plan.
                </p>
            </field>
        </record>

    </data>
</odoo>
